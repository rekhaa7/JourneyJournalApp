<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/journalLayout"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/journal_note_background"
   >



        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/enriqueta_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTime"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="6dp"
            android:imeOptions="actionNext"
            android:fontFamily="@font/enriqueta_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/enriqueta_regular"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:textAlignment="viewStart"
            android:layout_toLeftOf="@id/imageJournal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:imeOptions="actionDone"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_below="@id/title"
            />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageJournal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:riv_corner_radius="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_more_vert_24" />

</RelativeLayout >